    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    try{
        if(id_user.getText().equals("")|| email.getText().equals("")|| password.getPassword().equals("")|| tgl_lahir.getText().equals("")|| no_hp.getText().equals("")){
        JOptionPane.showMessageDialog(this,"Seluruh Bagian Harus Diisi.","pesan", JOptionPane.ERROR_MESSAGE);
        hapuslayar();
    }else{
        simpan(); 
        this.setVisible(false);
            new login_frame() .setVisible(true);
         
    }                                        
    }catch (Exception e) {
            JOptionPane.showMessageDialog(this, "Akun Sudah ada.","pesan",JOptionPane.WARNING_MESSAGE);
            hapuslayar();
            }
    }
    
