    private void hapuslayar(){
        id_user.setText("");
        email.setText("");
        password.setText("");
        tgl_lahir.setText("");
        no_hp.setText("");
    }
    
   
    private void simpan(){
        String id_user = this.id_user.getText();
        String email = this.email.getText();       
        String password = this.password.getText();
        String tgl_lahir = this.tgl_lahir.getText();
        String no_hp = this.no_hp.getText();
        try {
          String sql= "Insert into user values (?,?,?,?,?)";
          PreparedStatement p = (PreparedStatement) con.cc.prepareStatement(sql);
            p.setString(1, id_user);
            p.setString(2, email);
            p.setString(3, password);
            p.setString(4, tgl_lahir);
            p.setString(5, no_hp);
            p.executeUpdate();
            
            JOptionPane.showMessageDialog(this, "Data Sukses Di Simpan.");
                        
        }catch (SQLException e){
            System.out.println(e);
        }
    }

